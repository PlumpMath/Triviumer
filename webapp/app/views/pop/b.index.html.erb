<% if notice %>
<div id="notice" class="alert-box"><%= notice %></div>
<% end %>
<h1>Listing Pops</h1>

<table>
  <thead>
    <tr>
      <th>name</th>
      <th>X</th>
      <th>Y</th>
      <th>Z</th>
      <th>Created date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pops.each do |pop| %>
      <tr>
        <td><%= pop.name %></td>
        <td><%= pop.X %></td>
        <td><%= pop.Y %></td>
        <td><%= pop.Z %></td>
        <td><%= pop.created_at %></td>
        <td><%= link_to 'Show', pop %></td>
        <td><%= link_to 'Edit', edit_pop_path(pop) %></td>
        <td><%= link_to 'Destroy', pop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create new pop', new_pop_path %>
